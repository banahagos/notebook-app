<div class="row">
  <form action="/tags" method="GET" class="col s12 search-home">
    <div class="row">
      <div class="inputField col s12">
        <input class="search" placeholder="Search for a tag" name="tag" type="text" class="validate">
        <label for="Search">Search</label>
      </div>
    </div>
    <button class="btn waves-effect waves-light" type="submit">Search
      <i class="material-icons right">send</i>
    </button>
  </form>
</div>




{{#if message}}
<h1>{{message}}</h1> 
{{else}}
<div class="note-container">
  {{#each notesList}}
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title">{{title}}</h5>
      <p class="card-text">{{text}}</p>

      {{#if tags}}
      {{#each tags}}

      <div class="chip click-tag">
        {{this.name}}
      </div>
      {{/each}}
      {{/if}}
      <a href="/notes/{{_id}}" class="waves-effect waves-light btn">More</a>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}