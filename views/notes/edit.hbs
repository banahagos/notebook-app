<form action="/note/{{note._id}}" method="POST">
  <div class="form-group">
    <label for="">Title</label>
    <input type="text" name="title" value="{{note.title}}" class="form-control" id="exampleFormControlInput1">
  </div>
  <div class="form-group">
    <label for="">Note</label>
    <textarea name="text" class="form-control" id="exampleFormControlTextarea1" rows="3">{{note.text}}</textarea>
  </div>
  <div class="form-button">
    <button type="submit" class="btn btn-info">Update</button>
  </div>
  <form action="note/{{note._id}}/delete" method="POST">
    <button type="submit" class="btn btn-outline-secondary">Delete</button>
  </form>
</form>