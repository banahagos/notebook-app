<!--Profile --->
<div class="logged-in-img">
  <a href="/home">
    <img class="non-home-progile-img" src={{note.owner.imgPath}}>
  </a>
</div>

<!--Search --->
<div class="search-box">
  <form action="/search" method="GET" class="col s12 search-home">
    <div class="row">
      <div class="inputField col s12">
        <input class="search" placeholder="Search for a tag" name="tag" type="text" class="validate">
      </div>
    </div>
    <div class="search-button">
      <button class="btn search-button waves-effect waves-light" type="submit">Search
        <i class="material-icons right">send</i>
      </button>
    </div>
  </form>
</div>


<div class="container">
  <div class="row">
    <div class="col s12 16 card-display">
      <div class="card">
        {{#if note.title}}
        <div class="card-content card-title">
          <span>{{note.title}}</span>
          {{#if owner}}
          <a href="/notes/{{note._id}}/edit" class="btn-floating halfway-fab waves-effect waves-light left teal"><i
              class="material-icons">edit</i></a>
          {{/if}}
        </div>
        {{/if}}
        {{#if note.text}}
        <div class="card-content">
          <p>{{note.text}}</p>
        </div>
        {{/if}}
        {{#if note.tags}}
        <div class="card-action">
          {{#each note.tags}}
          <div class="chip click-tag">{{this.name}}</div>
          {{/each}}
        </div>
        {{/if}}
        {{!-- {{#if owner}}
        <div class="card-action card-buttons ">
          <form action="/notes/{{note._id}}/delete" method="POST" class="delete-form">
            <a class="btn-floating btn-delete grey"><i class="material-icons">delete</i></a>
          </form>
          <div>
            <a href="/notes/{{note._id}}/edit" class="btn-floating teal">
              <i class="material-icons">edit</i>
            </a>
          </div>
          {{/if}} --}}
        {{!-- </div> --}}
        <div class="card-action note-info">
          <div class="user-info">
            <p class="published-by">Published by:</p>
            <a href="/users/{{note.owner.username}}">
              <div class="chip">
                <img src={{note.owner.imgPath}} alt="profile image">
                <strong>{{note.owner.username}}</strong>
              </div>
            </a>
          </div>
        </div>
        {{!-- <div class="card-action"> --}}
          <div class="time card-content">{{note.updated_at_iso}}</div>
        {{!-- </div> --}}
      </div>
    </div>
  </div>

  <!--- MENUE - TO CREATE NOTES-->
  <div class="fixed-action-btn">
    <a class="btn-floating btn-large pink">
      <i class="large material-icons">add</i>
    </a>
    <ul>
      <li><a href="/notes/new" class="btn-floating red"><i class="material-icons">create</i></a></li>
      <li><a href="/notes/upload" class="btn-floating yellow darken-1"><i class="material-icons">add_a_photo</i></a>
      </li>
      <li><a href="/notes/script" class="btn-floating green"><i class="material-icons">gesture</i></a></li>
    </ul>
  </div>