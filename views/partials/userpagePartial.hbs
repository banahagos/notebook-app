<div class="card">
  <a href="/notes/{{_id}}">
    <div class="card-content card-title">
      <span>{{title}}</span>
    </div>
  </a>
  {{#if tags}}
  <div class="card-action">
    {{#each tags}}
    <div class="chip click-tag">{{this.name}}</div>
    {{/each}}
  </div>
  {{/if}}
  {{!-- <div class="time card-content">{{updated_at_iso}}</div> --}}
  <div class="card-action dates-home">
    <div class="last-update">
      <span>Last Update: </span>
      <div class="time">{{this.updated_at_iso}}</div>
    </div>
    <div class="created">
      <span>Created: </span>
      <div class="time">{{this.created_at_iso}}</div>
    </div>
  </div>