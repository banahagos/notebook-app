<div class="logged-in-img">
  <a href="/home">
    <img class="non-home-progile-img" src={{user.imgPath}}>
  </a>
</div>


<div class="search-box">
  <form action="/tags" method="GET" class="col s12 search-home">
    <div class="row">
      <div class="inputField col s12">
        <input class="search" placeholder="Search for a tag" name="tag" type="text" class="validate">
      </div>
    </div>
    <div class="search-button">
      <button class="btn search-button waves-effect waves-light" type="submit">Search
        <i class="material-icons right">send</i>
      </button>
    </div>
  </form>
</div>


{{#if tagSearchResult.[0].owner.public}}
<h5 class="headline">Search results for <span class="search-term">{{searchTerm}}</span></h5>
{{else}}
<div class="error-message">No note found</div>
{{/if}}

{{#if tagSearchResult.[0].owner.public}}
<div class="container">
  <div class="row">
    {{#each tagSearchResult}}
    <div class="col s12 16 card-display">
      {{> searchPartial this}}
    </div>
    {{/each}}
  </div>
</div>
{{/if}}
{{#if message}}
<div class="error-message">{{message}}</div>
{{/if}}

<!--- MENUE - TO CREATE NOTES-->
<div class="fixed-action-btn">
  <a class="btn-floating btn-large pink">
    <i class="large material-icons">add</i>
  </a>
  <ul>
    <li><a href="/notes/new" class="btn-floating red"><i class="material-icons">create</i></a></li>
    <li><a href="/notes/upload" class="btn-floating yellow darken-1"><i class="material-icons">add_a_photo</i></a>
    </li>
    <li><a href="/notes/script" class="btn-floating green"><i class="material-icons">gesture</i></a></li>
  </ul>
</div>